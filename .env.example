# Copy this file to .env.local and fill in the values

# Application
NEXT_PUBLIC_APP_NAME=Flux Studio
NEXT_PUBLIC_APP_URL=http://localhost:3456

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3456/api

# Export Settings
NEXT_PUBLIC_MAX_EXPORT_DURATION=180 # 3 minutes in seconds
NEXT_PUBLIC_MAX_FILE_SIZE=100 # MB

# Feature Flags
NEXT_PUBLIC_ENABLE_AUDIO=true
NEXT_PUBLIC_ENABLE_CLOUD_EXPORT=false
NEXT_PUBLIC_ENABLE_AI_FEATURES=false

# Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Future: Supabase Configuration
# NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
# SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Future: Storage Configuration
# STORAGE_ENDPOINT=your_storage_endpoint
# STORAGE_ACCESS_KEY=your_storage_access_key
# STORAGE_SECRET_KEY=your_storage_secret_key
# STORAGE_BUCKET=your_storage_bucket